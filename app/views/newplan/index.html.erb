<div id="plan-list">
  <div class="navbar-fixed-top">
    <div class="container">
      <form class="form-inline" id="saveplan" method="POST">
        <div class="row">
          <div class="col-xs-7 col-sm-9 col-md-10 col-lg-10">
            <label class="sr-only">プランタイトル</label><!-- non-display -->
            <input type="input" name="plan-title" class="form-control input-lg" placeholder="プランタイトル" required>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          </div>
          <div class="col-xs-5 col-sm-3 col-md-2 col-lg-2">
            <button type="submit" class="btn btn-default btn-lg">プラン保存</button>
          </div>
        </div><!-- .row -->
    </div><!-- .container -->
  </div> <!-- .navbar-fixed-top -->
  <div class="container">
    <div class="contents">
      <div class="row">
        <div class="col-sm-6">
          <div class="plan-detail">
            <textarea name="plan-desc" class="form-control" id="exampleInput" placeholder="プランの説明（場所、時間、予算等）"></textarea>
            <ol id="main-card-sortable" class="droptrue">
              <li class="ui-state-default"><span class="title">羽田空港</span><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button></li>
              <li class="ui-state-default"><span class="title">羽田空港</span><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button></li>
            </ol>
          </div><!-- .plan-detail -->
          </form><!--form id="saveplan" -->

          <div id="planpost">
            <form action="<%= newplan_path %>" id="addplan" method="POST">
              <div class="row">
                <div class="col-sm-10">
                  <input type="input" name="keyword" class="form-control" placeholder="目的地" required>
                </div>
                <div class="col-sm-2">
                  <input type="submit" class="btn btn-default" value="追加">
                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                </div>
              </div><!-- .row -->
            </form><!-- #addplan -->
          </div><!-- #planpost -->
          </div><!-- .col-sm-6 -->
          <div class="col-sm-6" id="card-serch">
            <div class="travel-serch">
              <h4>ホテル検索</h4>
              <form action="<%= newplan_path %>" id="hotel-search" method="POST">
                <div class="row">
                  <div class="col-sm-10">
                    <input type="input" name="keyword" class="form-control" placeholder="地域、ホテル名" required>
                  </div>
                  <div class="col-sm-2">
                    <input type="submit" class="btn btn-default" value="検索">
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                  </div>
                </div><!-- .row -->
              </form><!-- search-hotel -->
              <ol id="hotel-card-sortable"  class="droptrue">
                <li class="ui-state-hotel"><span class="title">アワーズイン阪急</span><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button></li>
                <li class="ui-state-hotel"><span class="title">アワーズイン阪急</span><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button></li>
              </ol>
            </div>
          </div><!-- .col-sm-6 -->
        </div><!-- .row -->
      </div><!-- contents -->
    </div><!-- container -->
</div><!-- #plan-list -->

