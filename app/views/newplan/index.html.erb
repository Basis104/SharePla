<div id="plan-list">
  <div class="navbar-fixed-top">
    <div class="container">
      <form class="form-inline" id="saveplan" method="POST">
        <div class="row">
          <div class="col-xs-7 col-sm-9 col-md-10 col-lg-10">
            <label class="sr-only">プランタイトル</label><!-- non-display -->
            <input type="input" name="plan-title" class="form-control input-lg" placeholder="プランタイトル" required>
          </div>
          <div class="col-xs-5 col-sm-3 col-md-2 col-lg-2">
            <button type="submit" class="btn btn-default btn-lg">プラン保存</button>
          </div>
        </div><!-- .row -->
    </div><!-- .container -->
  </div> <!-- .navbar-fixed-top -->

  <div class="container">
    <ol id="sortable">
      <li class="ui-state-default"><span class="glyphicon glyphicon-flag"></span><span class="title">羽田空港</span><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button></li>
    </ol>
  </form>
  </div><!-- container -->
</div><!-- #plan-list -->

<div class="container">
  <div id="planpost">
    <form action="<%= newplan_path %>" id="addplan" method="POST">
      <input type="input" name="keyword" required>
      <input type="submit" value="追加">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div><!-- #planpost -->
</div><!-- container -->
