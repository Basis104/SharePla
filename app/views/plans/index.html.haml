.container
  .page-header
    - if flash[:notice]
      .alert.alert-success.alert-dismissable
        %button{ type: 'button', class: 'close', data: {dismiss: 'alert'}, aria: {hiddeen: 'true'} }
          &times;
        =h(flash[:notice])

    .row
      .col-sm-10
        %h1 Welcome SharePla
      .col-sm-2
        .collapse.navbar-collapse.target
          %ul.sns-button
            %li
              %a{ href: 'https://twitter.com/share',
                class: 'twitter-share-button',
                data: { url: 'http://sharepla.herokuapp.com', text: 'SharePla', lang: 'ja', hashtags: 'SharePla'} } ツイート
              :javascript
                !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
            %li
              .fb-root
                :javascript
                  (function(d, s, id) {
                  var js, fjs = d.getElementsByTagName(s)[0];
                  if (d.getElementById(id)) return;
                  js = d.createElement(s); js.id = id;
                  js.src = "//connect.facebook.net/ja_JP/all.js#xfbml=1";
                  fjs.parentNode.insertBefore(js, fjs);
                  }(document, 'script', 'facebook-jssdk'));
              .fb-like{ data: { href: 'http://sharepla.herokuapp.com', layout: 'button_count', action: 'like', show: {faces: 'false'}, share: 'false' } }

  #new-plan-button
    = link_to 'New Plan!', new_plan_path, class: 'btn btn-primary btn-lg'

  .plans-list
    - if @plans
      - @plans.reverse.each do |plan|
        %li.top-list-title
          .area-tags
            - (plan[:area_tags] || []).each do |tag|
              %span{ name: tag, class: 'label label-default' }= tag
          %h4= plan[:title]
          %p= '作成日' + plan.created_at.strftime('%Y/%m/%d %H:%M')
          = link_to '', plan
