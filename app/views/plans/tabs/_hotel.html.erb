<% content_for :plan_tab_navs do %>
  <li><a href="#hotel" data-toggle="tab">ホテル検索</a></li>
<% end %>

<% content_for :plan_tab_contents do %>
  <div class="tab-pane" id="hotel">
    <form action="<%= hotel_search_plans_path %>" id="hotel-search" method="POST">
      <div class="row">
        <div class="col-sm-10">
          <input type="input" name="keyword" class="form-control" placeholder="地域、ホテル名" required>
        </div>
        <div class="col-sm-2">
          <input type="submit" class="btn btn-default" value="検索">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        </div>
      </div><!-- .row -->
    </form><!-- hotel-search -->
    <ol id="hotel-card-sortable"  class="droptrue">
    </ol>
  </div><!-- .tab-pane -->
<% end %>
