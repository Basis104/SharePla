<% content_for :plan_tab_navs do %>
  <li><a href="#map" data-toggle="tab">地図検索</a></li>
<% end %>

<% content_for :plan_tab_contents do %>
  <div class="tab-pane" id="map">
    <form action="<%= map_search_plans_path %>" id="map-search" method="POST">
      <div class="row">
        <div class="col-sm-10">
          <input type="input" name="keyword" class="form-control" placeholder="グーグルマップのように" required>
        </div>
        <div class="col-sm-2">
          <input type="submit" class="btn btn-default" value="検索">
        </div>
      </div><!-- .row -->
    </form><!-- map_search  -->
    <ol id="map-card-sortable"  class="droptrue">
    </ol>
  </div><!-- .tab-pane -->
<% end %>
