<% content_for :plan_tab_navs do %>
  <li><a href="#route" data-toggle="tab">ルート検索</a></li>
<% end %>

<% content_for :plan_tab_contents do %>
  <div class="tab-pane" id="route">
    <form action="<%= route_search_plans_path %>" id="route-search" method="POST">
      <div class="row">
        <div class="col-sm-10">
          <input type="input" name="keyword-src" class="form-control" placeholder="始点" required>
          <input type="input" name="keyword-dst" class="form-control" placeholder="終点" required>
        </div>
        <div class="col-sm-2">
          <input type="submit" class="btn btn-default" value="検索">
        </div>
      </div><!-- .row -->
    </form><!-- map_search  -->

    <ol id="route-card-sortable"  class="droptrue">
    </ol>
  </div><!-- .tab-pane -->
<% end %>
