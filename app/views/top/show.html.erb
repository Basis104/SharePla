<div class="container">
  <div class="page-header">
    <h1><%= @plan.title %></h1>
    <h2><%= @plan.description %></h2>
  </div>
  <% @plan.days['day0'].each do |arr| %>
    <% arr.each do |key,val| %>
      <li class="ui-state-default"><%= val %></li>
    <% end %>
  <% end %>

  <form action="<%= pdf_path %>" id="postUri" method="POST">
    <input type="hidden" name="uri" value="<%= request.url %>">
    <input type="submit" value="PDF">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
